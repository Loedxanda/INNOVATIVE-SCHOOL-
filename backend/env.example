# Backend Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:your_secure_password@postgres:5432/innovative_school
POSTGRES_DB=innovative_school
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here_make_it_long_and_secure
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_STR=/api/v1
PROJECT_NAME=Innovative School Platform
VERSION=0.1.0
HOST=0.0.0.0
PORT=8000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@innovativeschool.cm

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=your_s3_bucket_name_here
S3_REGION=us-east-1

# =============================================================================
# GOOGLE MAPS API
# =============================================================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=./backups
RETENTION_DAYS=30
COMPRESSION=true
ENCRYPTION=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
MAX_CONNECTIONS=20
POOL_SIZE=10
WORKERS=4

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
MAX_LOG_SIZE=10MB
BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=True
RELOAD=True
ENVIRONMENT=development

# =============================================================================
# PRODUCTION CONFIGURATION (Uncomment for production)
# =============================================================================
# DEBUG=False
# RELOAD=False
# ENVIRONMENT=production
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

